@model GetFit.Models.workout

@{
    ViewBag.Title = "Delete Workout";
}

<h2>Delete Workout</h2>

<h3>Are you sure you want to delete this workout?</h3>
<div>
    <h4>@Model.name</h4>
    <dl class="dl-horizontal">
        <dt>Muscle Group:</dt>
        <dd>@Model.musclegroup</dd>

        <dt>Reps:</dt>
        <dd>@Model.reps</dd>

        <dt>Video:</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.videourl))
            {
                <video width="320" height="240" controls>
                    <source src="@Url.Content(Model.videourl)" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            }
            else
            {
                <p>No video uploaded.</p>
            }
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.workoutid)

        <input type="submit" value="Delete" class="btn" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn" })
    }
</div>
