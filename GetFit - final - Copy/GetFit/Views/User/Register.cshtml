@model GetFit.Models.user
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="form-box register">
    @using (Html.BeginForm("Register", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <h1>Registration</h1>

        <div class="input-box">
            @Html.TextBoxFor(model => model.user_fullname, new { placeholder = "Full Name", @class = "form-control", required = "required" })
            <i class='bx bxs-user'></i>
            @Html.ValidationMessageFor(model => model.user_fullname, "", new { @class = "text-danger" })
        </div>

        <div class="input-box">
            @Html.TextBoxFor(model => model.username, new { placeholder = "Username", @class = "form-control", required = "required" })
            <i class='bx bxs-user'></i>
            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
        </div>

        <div class="input-box">
            @Html.TextBoxFor(model => model.email, new { placeholder = "Email", @class = "form-control", required = "required", type = "email" })
            <i class='bx bxs-envelope'></i>
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>

        <div class="input-box">
            @Html.PasswordFor(model => model.password, new { placeholder = "Password", @class = "form-control", required = "required" })
            <i class='bx bxs-lock-alt'></i>
            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="comfirmpassword">confirm password: </label>
            <div class="col-md-10">

                <input class="form-control text-box single-line input-validation-error" data-
                       val="true" data-val-required="Must enter password to confirm!"
                       id="confirmpassword" name="confirmpassword" type="password" value="" aria-
                       describedby="confirmpassword-error" aria-invalid="true">

                @ViewData["enterpassword"]
                @ViewData["samepassword"]
            </div>
        </div>

        <div class="input-box">
            @Html.TextBoxFor(model => model.phonenumber, new { placeholder = "Phone Number", @class = "form-control", required = "required" })
            <i class='bx bxs-phone'></i>
            @Html.ValidationMessageFor(model => model.phonenumber, "", new { @class = "text-danger" })
        </div>

        <div class="input-box">
            @Html.TextBoxFor(model => model.user_dob, new { placeholder = "Date of Birth", @class = "form-control", required = "required", type = "date" })
            <i class='bx bxs-calendar'></i>
            @Html.ValidationMessageFor(model => model.user_dob, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn">Register</button>

        <p>or register with social platforms</p>
        <div class="social-icons">
            <a href="#"><i class='bx bxl-google'></i></a>
            <a href="#"><i class='bx bxl-facebook'></i></a>
            <a href="#"><i class='bx bxl-github'></i></a>
            <a href="#"><i class='bx bxl-linkedin'></i></a>
        </div>
    }
</div>
