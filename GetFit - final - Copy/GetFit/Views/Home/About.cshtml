@{
    ViewBag.Title = "About Us";
    ViewBag.Message = "Get to Know Us";
}

<header class="about-banner">
    <div class="banner-content">
        <h1>About GetFit</h1>
        <p>Your journey to a healthier life starts here!</p>
    </div>
</header>

<div class="container about-container">
    <section class="about-section">
        <h2>@ViewBag.Title</h2>
        <h3>@ViewBag.Message</h3>
        <p>Welcome to GetFit, your ultimate fitness companion. Our goal is to help you achieve a healthier lifestyle through personalized workout plans, BMI tracking, and expert guidance.</p>
    </section>

    <section class="about-grid">
        <div class="about-card">
            <h3>Our Mission</h3>
            <p>To empower individuals to take control of their health through accessible and effective fitness solutions.</p>
        </div>
        <div class="about-card">
            <h3>Why Choose Us?</h3>
            <p>We offer science-backed fitness plans, real-time tracking, and a supportive community to help you stay on track.</p>
        </div>
        <div class="about-card">
            <h3>Our Team</h3>
            <p>We are a passionate team of fitness experts, developers, and health enthusiasts committed to your wellness.</p>
        </div>
    </section>
</div>

<!-- Styles -->
@section Styles {
    <style>
        .about-banner {
            background: url('~/Content/images/about-banner.jpg') no-repeat center center/cover;
            height: 300px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: black;
            position: relative;
        }

            .about-banner::before {
                content: '';
                position: absolute;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.5);
            }

        .banner-content {
            position: relative;
            z-index: 1;
        }

        .about-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 40px 20px;
            text-align: center;
        }

        .about-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }

        .about-card {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
        }

            .about-card:hover {
                transform: translateY(-5px);
            }
    </style>
}
